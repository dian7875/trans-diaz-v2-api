<html>
  <head>
    <meta charset='UTF-8' />
    <title>Reporte de viajes</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        margin: 20px;
      }

      h1 {
        font-size: 18px;
        margin-bottom: 5px;
      }

      h3 {
        font-size: 14px;
        margin-top: 25px;
        margin-bottom: 5px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 6px;
        text-align: left;
      }

      th {
        background-color: #f4f4f4;
      }
    </style>
  </head>

  <body>
    <h1>Reporte de viajes</h1>

    <p>
      <strong>Periodo:</strong>
      {{startDate}} a {{endDate}}
    </p>

    {{#each travelsByTruck}}
      <h3>Camión: {{@key}}</h3>

      <table>
        <thead>
          <tr>
            <th>Factura</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Chofer</th>
            <th>Sin IVA</th>
            <th>IVA</th>
            <th>Con IVA</th>
          </tr>
        </thead>

        <tbody>
          {{#each this.travels}}
            <tr>
              <td>{{this.travelCode}}</td>
              <td>{{formatOnlyDate this.travelDate}}</td>
              <td>{{this.client.name}}</td>
              <td>{{this.driver.name}}</td>
              <td>₡ {{formatCurrency this.noIVAmount}}</td>
              <td>₡ {{formatCurrency this.IVAmount}}</td>
              <td>₡ {{formatCurrency this.withIVAmount}}</td>
            </tr>
          {{/each}}

          <tr>
            <td colspan='4'><strong>Total camión</strong></td>
            <td><strong>₡ {{formatCurrency this.totals.totalNoIVAmount}}</strong></td>
            <td><strong>₡ {{formatCurrency this.totals.totalIVAmount}}</strong></td>
            <td><strong>₡ {{formatCurrency this.totals.totalWithIVAmount}}</strong></td>
          </tr>

          <tr>
            <td colspan='6'><strong>Total gastos</strong></td>
            <td><strong>₡ {{formatCurrency this.totalExpenses}}</strong></td>
          </tr>

          <tr>
            <td colspan='6'><strong>Ingreso neto</strong></td>
            <td><strong>₡ {{formatCurrency this.remainingAmount}}</strong></td>
          </tr>
        </tbody>
      </table>
    {{/each}}

    <h3>Resumen general</h3>

    <table>
      <tbody>
        <tr>
          <td>Total sin IVA</td>
          <td>₡ {{formatCurrency totals.totalNoIVAmount}}</td>
        </tr>
        <tr>
          <td>Total IVA</td>
          <td>₡ {{formatCurrency totals.totalIVAmount}}</td>
        </tr>
        <tr>
          <td>Total con IVA</td>
          <td>₡ {{formatCurrency totals.totalWithIVAmount}}</td>
        </tr>
        <tr>
          <td>Total gastos</td>
          <td>₡ {{formatCurrency totals.totalExpenses}}</td>
        </tr>
        <tr>
          <td><strong>Ingreso neto real</strong></td>
          <td><strong>₡ {{formatCurrency totals.netIncome}}</strong></td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
